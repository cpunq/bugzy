<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="specialTextColor">@color/colorPrimary</item>
        <item name="inputPanelColor">@android:color/white</item>
        <item name="inputTextColor">#8B999F</item>
        <item name="chipBgColor">@color/chip_bg_light</item>
        <item name="dividerColor">#1F000000</item>
        <item name="headerTextColor">@color/main_color</item>
        <item name="borderedContainer">@drawable/stroked_container</item>
        <item name="secondaryWindowBackground">#ffffff</item>

        <item name="casePropBackground">@drawable/background_case_prop</item>
        <item name="networkErrorRes">@drawable/img_network_err</item>

        <!--<item name="android:buttonStyle">@style/AppTheme.PrimaryButton</item>-->
        <item name="editTextStyle">@style/AppTheme.EditTextStyle</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#7D7D7D</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="dividerColor">#1F000000</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="inputPanelColor">@color/dark4</item>
        <item name="inputTextColor">@android:color/white</item>
        <item name="chipBgColor">@color/chip_bg_dark</item>
        <item name="headerTextColor">#23AAF6</item>
        <item name="borderedContainer">@drawable/stroked_container_light</item>
        <item name="secondaryWindowBackground">@color/dark34</item>
        <item name="casePropBackground">@drawable/background_case_prop_dark</item>
        <item name="networkErrorRes">@drawable/img_network_err_white</item>

        <item name="specialTextColor">#CDCDCD</item>
        <!--<item name="android:buttonStyle">@style/AppTheme.PrimaryButton</item>-->
        <item name="editTextStyle">@style/AppTheme.EditTextStyle</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#7D7D7D</item>
    </style>


    <style name="LoginTheme" parent="AppTheme">
        <item name="android:buttonStyle">@style/AppTheme.PrimaryButton.Large</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="LoginTheme.Dark" parent="AppTheme.Dark">
        <item name="android:buttonStyle">@style/AppTheme.PrimaryButton.Large</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="FullScreenImageActivityTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/translucent_bg</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>


    <style name="SplashTheme.Dark" parent="AppTheme.Dark">
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="CaseEditTheme" parent="AppTheme">
        <item name="toolbarStyle">@style/SearchActivityTheme.Toolbar</item>
        <item name="editTextStyle">@style/CaseEditTheme.EditTextStyle</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:buttonStyle">@style/AppTheme.PrimaryButton.Small</item>
        <item name="android:textColorSecondary">#7D7D7D</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="CaseEditTheme.Dark" parent="AppTheme.Dark">
        <item name="toolbarStyle">@style/SearchActivityTheme.Toolbar</item>
        <item name="editTextStyle">@style/CaseEditTheme.EditTextStyle</item>
        <item name="android:buttonStyle">@style/AppTheme.PrimaryButton.Small</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SearchActivityTheme" parent="AppTheme">
        <item name="toolbarStyle">@style/SearchActivityTheme.Toolbar</item>
        <item name="editTextStyle">@style/Widget.AppCompat.EditText</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SearchActivityTheme.Dark" parent="AppTheme.Dark">
        <item name="toolbarStyle">@style/SearchActivityTheme.Toolbar</item>
        <item name="editTextStyle">@style/Widget.AppCompat.EditText</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SearchActivityTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- Global button styles -->
    <style name="AppTheme.PrimaryButton.Large" parent="Widget.AppCompat.Button.Colored">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">@dimen/subheading</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    <style name="AppTheme.PrimaryButton.Small" parent="Widget.AppCompat.Button.Colored">
        <!--<item name="android:padding">20dp</item>-->
        <!--<item name="android:textSize">@dimen/subheading</item>-->
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="AppTheme.SecondaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">@dimen/subheading</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:theme">@style/SecondaryButtonTheme</item>
    </style>
    <style name="SecondaryButtonTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/buttonSecondary</item>
        <item name="colorAccent">@color/buttonSecondary</item>
    </style>

    <!-- Global TextView styles-->
    <style name="AppTheme.TextView.Primary" parent="android:Widget.TextView">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/body_1</item>
    </style>
    <style name="AppTheme.TextView.Secondary" parent="android:Widget.TextView">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/body_1</item>
    </style>

    <style name="AppTheme.PrimaryBigTextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">?attr/specialTextColor</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <!-- Global EditText styles -->
    <style name="AppTheme.EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">@dimen/body_1</item>
        <item name="android:background">?attr/inputPanelColor</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">?attr/inputTextColor</item>
    </style>

    <style name="CaseEditTheme.EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">@dimen/body_1</item>
        <item name="android:background">?attr/inputPanelColor</item>
        <item name="android:textColor">?attr/inputTextColor</item>
    </style>


    <!-- Others -->
    <style name="AppTheme.NavigationView">
        <item name="android:theme">@style/NavigationDrawerStyle</item>
        <item name="itemTextColor">@color/item_textcolor</item>
        <item name="itemBackground">@drawable/item_background_navview</item>
    </style>
    <style name="NavigationDrawerStyle" parent="@style/ThemeOverlay.AppCompat.Dark">
        <!--<item name="android:textSize">@dimen/subheading</item>-->
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <!--<item name="android:letterSpacing">0.1</item>-->
        <item name="listPreferredItemPaddingLeft">36dp</item>
        <item name="android:listPreferredItemHeight">48dp</item>
        <item name="android:listPreferredItemHeightLarge">48dp</item>
        <item name="android:listPreferredItemHeightSmall">48dp</item>

    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="EmailOption" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/body_1</item>
    </style>

    <style name="EmailOptionText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/body_1</item>
    </style>

    <style name="CaseEditTheme.CasePropStyle">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">@dimen/body_1</item>
        <item name="android:background">?attr/casePropBackground</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">?attr/inputTextColor</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="CaseEditTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonBarButtonStyle">@style/AppTheme.PrimaryButton.Small</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.PrimaryButton.Large</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>

        <item name="dialogTitleColor">@color/colorPrimaryDark</item>
        <item name="dialogMessageColor">@color/colorPrimary</item>
    </style>

    <style name="CaseEditTheme.AlertDialog.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonBarButtonStyle">@style/AppTheme.PrimaryButton.Small</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.PrimaryButton.Large</item>
        <item name="android:textColorPrimary">#CDCDCD</item>

        <item name="dialogTitleColor">#FFFFFF</item>
        <item name="dialogMessageColor">#8FFFFFFF</item>
    </style>

    <style name="CaseEditTheme.AlertDialog.Title" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/dialogTitleColor</item>
    </style>

    <style name="CaseEditTheme.AlertDialog.Message" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">?attr/dialogMessageColor</item>
    </style>


</resources>
