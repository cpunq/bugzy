<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/diagonalColor"/>

    <item android:top="0dp"
        android:bottom="300dp"
        android:left="0dp"
        android:right="-300dp">
        <rotate
            android:fromDegrees="-14"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="#3A4750"/>
            </shape>
        </rotate>
    </item>
</layer-list>